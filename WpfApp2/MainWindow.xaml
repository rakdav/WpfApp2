<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Циклы" Height="250" Width="150" Background="Chartreuse">
    <Grid>
        <Label Content="Введите число" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="23" Margin="10,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="output" HorizontalAlignment="Left" Margin="10,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="35"/>
        <Button Content="С предусловием" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Button Content="С постусловием" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1"/>
        <Button Content="Цикл for" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_2"/>

    </Grid>
</Window>
